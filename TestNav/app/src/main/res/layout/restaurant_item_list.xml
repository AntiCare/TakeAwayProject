<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/restaurantItemCardVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/restautantImgVw"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/restaurant_imgvw_description"
            app:srcCompat="@drawable/ic_baseline_person_24" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/restaurantItemCardVw">

        <TextView
            android:id="@+id/restaurantNameTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restaurant's name"
            android:textSize="28sp"
            />

        <TextView
            android:id="@+id/restaurantRatingTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="25sp" />

    </LinearLayout>
</RelativeLayout>