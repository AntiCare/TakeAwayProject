<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.favorite.FavoritesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/favoritesHeaderTxtVw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15pt"
            android:text="@string/favorites_restaurants" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noFavRestaurantsTxtVw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="0"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/textVw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="@string/restaurants"
                android:textSize="10pt" />

        </LinearLayout>

        <ListView
            android:id="@+id/favoritesListVw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="6dp"/>

    </LinearLayout>
</FrameLayout>