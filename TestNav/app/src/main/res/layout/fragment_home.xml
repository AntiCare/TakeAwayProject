<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.home.HomeFragment">

    <TextView
        android:id="@+id/headerTxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="119dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="8sp"
        android:text="@string/home_header"
        android:textColor="@color/colorAccent"
        android:textSize="15pt"
        android:textStyle="bold" />


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTxtVw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:iconifiedByDefault="false"
        android:queryHint="Search" />


    <TextView
        android:id="@+id/listVwHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="27dp"
        android:paddingTop="8dp"
        android:text="@string/restaurant_list_header"
        android:textColor="@color/colorAccent"
        android:textSize="8pt"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/restaurantsListVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listVwHeader"
        />

</RelativeLayout>